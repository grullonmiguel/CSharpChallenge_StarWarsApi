<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=System.Runtime">

    <FontFamily x:Key="DefaultFont">Segoe UI Light, Lucida Sans Unicode, Arial, Verdana</FontFamily>

    <System:Double x:Key="FontSize-Smallest">8</System:Double>
    <System:Double x:Key="FontSize-Smaller">12</System:Double>
    <System:Double x:Key="FontSize-Normal">13.333</System:Double>
    <System:Double x:Key="FontSize-Large">16</System:Double>
    <System:Double x:Key="FontSize-Larger">24</System:Double>
    <System:Double x:Key="FontSize-XLarge">32</System:Double>
    <System:Double x:Key="FontSize-XXLarge">40</System:Double>

</ResourceDictionary>