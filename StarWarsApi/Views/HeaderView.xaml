<UserControl x:Class="StarWarsApi.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>

        <!-- AT-AT Logo-->
        <Image Margin="16 0" 
               Width="60"  
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Source="/StarWarsApi;component/Assets/at-at.png" />

        <!-- Title -->
        <StackPanel Margin="100 0">
            <TextBlock Style="{StaticResource TitleStyle}" Text="SWAPI" FontSize="40" />
            <TextBlock Style="{StaticResource SubTitleStyle}" Text="The Star Wars API"  />
        </StackPanel>
        
    </Grid>
</UserControl>