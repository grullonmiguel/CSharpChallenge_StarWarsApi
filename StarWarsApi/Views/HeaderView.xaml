<UserControl x:Class="StarWarsApi.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>

        <!-- AT-AT Logo-->
        <Image Width="75" Margin="0 16 0 0"  
               HorizontalAlignment="Left" 
               Source="/StarWarsApi;component/Assets/at-at.png" />

        <!-- Title -->
        <StackPanel Margin="75 0 0 0" >
            <TextBlock Grid.Row="0" Style="{StaticResource TitleStyle}" Text="SWAPI" />
            <TextBlock Grid.Row="1" Style="{StaticResource SubTitleStyle}" Text="The Star Wars API" />
        </StackPanel>
        
    </Grid>
</UserControl>