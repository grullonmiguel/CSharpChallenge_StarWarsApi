<Window x:Class="StarWarsApi.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StarWarsApi.ViewModels"
        xmlns:views="clr-namespace:StarWarsApi.Views"
        Title="Swapi" Height="650" Width="960" 
        FocusManager.FocusedElement="{Binding ElementName=txtSearch}"
        Background="{StaticResource BackgroundBrush1}">

    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>

    <Grid>

        <!-- Definitions  -->
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="auto" />
            <!-- Separator -->
            <RowDefinition Height="auto" />
            <!-- Contnent-->
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <views:HeaderView Grid.Row="0" />

        <!-- Search -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Margin="16 0">

            <TextBox Width="75" 
                         FontSize="20"
                         Padding="2"
                         Foreground="{StaticResource BackgroundBrush2}"
                        BorderThickness="0" 
                        Name="txtSearch"
                        Text="{Binding Path=CharacterId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Button FontSize="12" 
                        Width="60"
                        Content="SEARCH"
                        IsDefault="True"
                        Command="{Binding SearchCharacterCommand}"  />

        </StackPanel>

        <!-- Separator  -->
        <Separator Grid.Row="1" Margin="0 8" />
        
        <!-- Content -->
        <Grid Grid.Row="2">
            
            <!--  Definitions  -->
            <Grid.ColumnDefinitions>
                <!-- Characters -->
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Characters -->
            <ListBox Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding Characters}"
                     SelectedItem="{Binding CharacterSelected}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Style="{StaticResource HeaderStyle}" Padding="0 2" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!--<DataGrid Grid.Row="0" 
                        IsReadOnly="True" 
                        RowHeight="28"
                        HeadersVisibility="None"
                        AutoGenerateColumns="False"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        SelectedItem="{Binding CharacterSelected, Mode=TwoWay}"
                        ItemsSource="{Binding Characters}" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}" />
                </DataGrid.Columns>
            </DataGrid>-->

            <!-- Selected Character -->
            <Grid Grid.Column="1" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    
                    <!-- Character Name -->
                    <TextBlock FontSize="32" Text="{Binding CharacterSelected.Name}" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" />

                    <!-- Character Info -->
                    <TextBlock Style="{StaticResource HeaderStyle}" >
                        <Run Text="Born:" />
                        <Run Text="{Binding CharacterSelected.BirthYear}" />
                        <Run Text=" | " />
                        <Run Text="Height:" />
                        <Run Text="{Binding CharacterSelected.Height}" />
                        <Run Text="cm" />
                        <Run Text=" | " />
                        <Run Text="Weight:" />
                        <Run Text="{Binding CharacterSelected.Mass}" />
                        <Run Text="kg" />
                    </TextBlock>

                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                        <!-- Character Homeworld -->
                        <TextBlock Style="{StaticResource HeaderStyle}" Margin="16 0" >
                            <Run Text="Homeworld:" />
                            <Run Text="{Binding HomeWorld}" />
                        </TextBlock>

                </StackPanel>

                <!-- Separator  -->
                <Separator Grid.Row="1" Margin="0 16 0 0" />
                
                <Grid Grid.Row="2" Margin="0 16">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Films -->
                    <views:FilmsView Grid.Column="0" DataContext="{Binding Films}" />

                    <!-- Starship Grid-->
                    <views:StarshipsView Grid.Column="1" DataContext="{Binding Starships}" />

                    <!-- Vehicles Grid-->
                    <views:VehiclesView Grid.Column="2" DataContext="{Binding Vehicles}" />

                </Grid>

            </Grid>
            
            
            
            
            <Border Grid.Column="1" Visibility="Collapsed" >

                <StackPanel Margin="2,0,0,0" >

                    

                    

                </StackPanel>
            </Border>

            

            <TextBlock Grid.Row="3" 
                   Margin="24 8"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF999999"
                   Text="{Binding Path=CharacterCount, StringFormat='Total Characters: {0}', FallbackValue=''}"  />

        </Grid>

        <!-- Wait Message -->
        <Border Grid.Row="0"
                Grid.RowSpan="3"
                Background="#99000000"
                Visibility="{Binding Path=IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">

            <TextBlock FontSize="40" Style="{StaticResource HeaderStyle}" Text="Searching the SWAPI database..." />
            
        </Border>

    </Grid>
      
</Window>